# Environment Variables untuk Vercel Deployment
# Copy ini ke Vercel Dashboard -> Settings -> Environment Variables

# Database Configuration
DB_HOST=localhost
DB_NAME=validasi_barang
DB_USER=root
DB_PASSWORD=

# Untuk production, gunakan database cloud seperti:
# DB_HOST=your-mysql-host.com
# DB_NAME=your_production_db
# DB_USER=your_db_user
# DB_PASSWORD=your_secure_password

# Session Configuration
SESSION_SECRET=your-random-session-secret-key-here

# Application Settings
APP_ENV=production
APP_DEBUG=false